{
  "name": "tlox",
  "dependencies": {
    "@types/node": "^16.7.12",
    "chalk": "^4.1.2",
    "oclif": "^1.18.1",
    "typescript": "^4.4.3",
    "yargs": "^17.2.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.5"
  },
  "engines": {
    "node": "14.16",
    "npm": "6.14",
    "yarn": "1.22"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all"
  },
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "nuke": "rm -rf node_modules && yarn clean && yarn install",
    "test": "jest",
    "test-dev": "jest --watch-all --coverage --verbose",
    "tsc-dev": "tsc --watch --preserveWatchOutput",
    "tlox-dev": "nodemon -L ./dist/tlox.js --",
    "tlox": "yarn tsc && node ./dist/tlox.js",
    "dev": "concurrently --kill-others --names \"TSC,LOX\" --prefix \"{time} [{name}] \" --prefix-colors=\"magenta,blue\" \"yarn tsc-dev\" \"yarn tlox-dev\""
  }
}
